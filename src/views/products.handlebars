<h1>Lista de productos</h1>
{{#if welcomeMessage}}
    <p>{{welcomeMessage}}</p>
{{/if}}

<ul>
    {{#each products}}
    <li>{{this.title}} - {{description}} - $ {{price}} </li>
    {{/each}}
</ul>

{{>menu}}

{{#if hasPrevPage}}
    <a href="/products?pagina={{prevPage}}">Pag.Ant.</a>
{{/if}}

{{#if hasNextPage}}
    <a href="/products?pagina={{nextPage}}">Pag.Sig.</a>
{{/if}}

<a href="/products?pagina={{totalPages}}">Ult. Pag.</a>
